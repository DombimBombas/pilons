<Window x:Class="pilons.BreakColumnsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Разделение пилонов" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="ColumnsDataGrid" AutoGenerateColumns="True" Margin="10" />
        <Button Content="Разделить пилоны" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                Click="OnSplitColumnsButtonClick"/>
    </Grid>
</Window>